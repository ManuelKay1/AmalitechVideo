<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <link rel="stylesheet" href="login-styles.css">

    <script>
        // Function to handle login attempt
        function login() {
            var username = document.getElementById("username").value;
            var password = document.getElementById("password").value;
            var secretKey = "Manuel_kay1"; 
            
            // Check if username and password are valid
            if (username === "Manuel" && password === "12345") {
                var enteredKey = prompt("Enter the secret key:");
                
                // Check if the secret key matches
                if (enteredKey === secretKey) {
                    alert("Login successful!");
                    document.getElementById("loginForm").submit(); // Submit the form if login is successful
                } else {
                    alert("Secret key incorrect. Login failed.");
                }
            } else {
                alert("Invalid username or password. Login failed.");
            }
        }
    </script>

</head>
<body>
    <div class="login-container">
        <h1>Admin Login</h1>
        <form action="/admin" method="POST" id="loginForm">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="button" onclick="login()">Login</button>
           
          
            
        </form>
    </div>

    
</body>
</html>